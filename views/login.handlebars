          <form id='login-form' class="mb-0">

            <div class='field has-text-grey-dark'>
              <label for='username' class='label'>Username</label>
              <div class='control'>
                <input class='input' type='text' placeholder='username' id='username' minlength='5' maxlength='15' />
              </div>
            </div>

            <div class='field has-text-grey-dark'>
              <label for='password' class='label'>Password</label>
              <div class='control'>
                <input class='input' id='password' type='password' placeholder='********' minlength='8' />
              </div>
            </div>
            <div class='field is-flex is-justify-content-space-evenly has-text-grey-dark'>
              <button class='button is-primary'>Login</button>
            </div>
          </form>
          <p class='has-text-centered mt-2'>
            or sign up
            <a href='/signup'>here</a>
          </p>
        </section>
      </div>
    </div>
  </div>
  <script src='/js/login.js'></script>
</section>